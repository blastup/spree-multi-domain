<% if @product && @product.id %>
  <div class="row">
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h1 class="panel-title">
            <%= Spree.t(:stores) %>
          </h1>
        </div>

        <div class="panel-body">
          <%= f.field_container :stores, :class => ["form-group"] do %>
            <% product_stores = @product.stores.to_a %>
            <% Spree::Store.all.each do |store| %>
              <div class="checkbox">
                <%= label_tag do %>
                  <%= check_box_tag("product[stores][]", store.id, product_stores.include?(store)) %>
                  <%= store.name %>
                <% end %>
              </div>
            <% end %>
            <%= f.error_message_on :store_id %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>